@{
    ViewData["Title"] = "Add New Movie";
}

<h1>Add a New Movie</h1>
<form method="post" action="AddMovie">
    <table>
        <tr>
            <td>Title:</td>
            <td><input name="Title" type="text" /></td>
        </tr>
        <tr>
            <td>Description:</td>
            <td><input name="Description" type="text" /></td>
        </tr>
        <tr>
            <td>Director:</td>
            <td><input name="Director" type="text" /></td>
        </tr>
        <tr>
            <td>Genre:</td>
            <td><input name="Genre" type="text" /></td>
        </tr>
         <tr>
            <td>Movie Star:</td>
            <td><input name="MovieStar" type="text" /></td>
        </tr>
        <tr>
            <td>Date Released:</td>
            <td><input name="DateReleased" type="text" /></td>
        </tr>
        <tr>
            <td>Rating:</td>
            <td><input name="Rating" type="text" /></td>
        </tr>
        <tr>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
</form>