@model MovieModel
@{
    ViewData["Title"] = "Edit Movie";
}

@using(@Html.BeginForm("SubmitEditMovie","Home", FormMethod.Post))
{
    <table>
        <tr>
            <td>Title:</td>
            <td>
                @Html.EditorFor(x => x.Title)
            </td>
        </tr>
        <tr>
            <td>Description:</td>
            <td>@Html.EditorFor(x => x.Description)</td>
        </tr>
        <tr>
            <td>Director:</td>
            <td>@Html.EditorFor(x => x.Director)</td>
        </tr>
        <tr>
            <td>Genre:</td>
            <td>@Html.DropDownList("Genre",new SelectList(new List<string>{"Horror","Drama","Comedy"}),"Select One", new {@class = "form-control"})</td>
        </tr>
         <tr>
            <td>Movie Star:</td>
            <td>@Html.EditorFor(x => x.MovieStar)</td>
        </tr>
        <tr>
            <td>Date Released:</td>
            <td>@Html.EditorFor(x => x.DateReleased)</td>
        </tr>
        <tr>
            <td>Rating:</td>
            <td>@Html.EditorFor(x => x.Rating)</td>
        </tr>
        <tr>
            <td><input type="submit" value="Submit"/></td>
        </tr>
    </table>
}